pipeline {
    agent any

    environment {
        JAVA_HOME = "/usr/lib/jvm/java-17-openjdk-amd64"
    }

    stages {
        stage('Setup Environment') {
            steps {
                script {
                    if (sh(returnStatus: true, script: 'which ansible') != 0) {
                        sh 'sudo apt-get update && sudo apt-get install -y ansible'
                    }
                }
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:it2021035/HuaDoc.git'
            }
        }
        stage('Preparation') {
            steps {
                dir('localDocWebApp') {
                    sh 'chmod +x ./mvnw'
                }
            }
        }
        stage('Test') {
            steps {
                dir('localDocWebApp') {
                    sh './mvnw test'
                }
            }
        }
        stage('Run Ansible Pipeline') {
            steps {
                build job: 'ansible'
            }
        }
        stage('Install Ansible Prerequisites') {
            steps {
                sh 'ansible-galaxy install geerlingguy.postgresql'
            }
        }
        stage('Install Postgres') {
            steps {
                sh '''
                    export ANSIBLE_CONFIG=~/workspace/ansible/ansible.cfg
                    ansible-playbook -i ~/workspace/ansible/hosts.yaml -l azure-db-server ~/workspace/ansible/playbooks/postgres.yaml
                '''
            }
        }
        stage('Deploy Spring Boot App') {
            steps {
                sh '''
                    export ANSIBLE_CONFIG=~/workspace/ansible/ansible.cfg
                    ansible-playbook -i ~/workspace/ansible/hosts.yaml -l appserver-vm ~/workspace/ansible/playbooks/spring.yaml
                '''
            }
        }
        stage('Deploy Frontend') {
            steps {
                sh '''
                    sed -i 's/dbserver/51.13.35.234/g' ~/workspace/ansible/host_vars/appserver-vm.yaml
                    export ANSIBLE_CONFIG=~/workspace/ansible/ansible.cfg
                    ansible-playbook -i ~/workspace/ansible/hosts.yaml -l appserver-vm -e branch=main -e backend_server_url=http://localhost:9090 ~/workspace/ansible/playbooks/vue.yaml
                '''
            }
        }
    }
}
